body
  overflow visible

.styleguide
  padding-bottom 2em

  .styleguide-container
    padding-left 2em
    padding-right 2em
    max-width 780px

  @media all and (max-width: 779px)
    padding-bottom 1em

    .styleguide-container
      padding-left 1em
      padding-right 1em

  .cover
    padding-top 2em
    padding-bottom 3em
    color #f0f0f0
    background-color #563C5C

  .colors
    .item
      display inline-block
      text-align center
      margin-bottom 1em

    .color
      width 110px
      height 110px
      transition border .1s
      border-color rgba(#000, .05)
      border-style solid
      border-width 0

      &:hover
        border-width .4em

    span
      font-size .8em
      font-weight 600

  .example
    padding 1em
    background-color #f9f9f9

  code.example
    display block
    border-radius 0
    font-family Consolas, Menlo, Courier, monospace
    color #f0f0f0
    line-height 1.5
    font-weight 600
    background-color #666

  .buttons
    button
      margin-right .5em
      margin-bottom .5em
