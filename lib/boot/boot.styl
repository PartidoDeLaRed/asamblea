/* Vars
-------------------------------------------------- */

@import './vars'

/* General
-------------------------------------------------- */

html
  -webkit-font-smoothing antialiased

body
  color rgba(#000, .8)
  overflow hidden
  font-size 16px
  line-height 1.4
  font-family 'Open Sans', sans-serif

h1,
h2,
h3,
p
  color inherit

p
  font-weight 400
  font-size 1em
  line-height 1.6

.lead
  font-size 1.2em

h1,
h2,
h3
  line-height 1.1
  font-weight 700

h1
  font-size 2.6em
  margin-top 1em
  margin-bottom .5em

h2
  font-size 1.75em
  margin-top 1.2em
  margin-bottom .8em

h3
  font-size 1em
  margin-top 1.375em
  margin-bottom 1.375em

a
  color #3d699e
  font-weight bold

  &:hover,
  &:focus,
  &:active
    color #3d699e
    text-decoration none

img.avatar
  border-radius 100%

.btn
  font-weight bold
  letter-spacing .1px
  border 0
  border-radius 2px

.btn-success
  background-color #27ae60

  &:hover
    background-color #1C8045

.btn-default
  border 0
  color #333
  background-color #f5f5f5

.btn-group > .btn + .dropdown-toggle
  padding-left 13px
  padding-right 13px

label
  font-size .875em

.dropdown-menu
  border-radius 0
  text-transform none

.alert
  color white
  font-weight bold
  border 0
  border-radius border_radius
  &.alert-info
    background-color #3498db
  &.alert-success
    background-color #27ae60
  &.alert-warning
    background-color #f1c40f
  &.alert-block
    background-color #bebec5
    color white

.system-alert
  margin-top 20px

.caret
  color #000
  position absolute
  right 12px
  top 50%
  margin-top -1px

.inner-container
  padding-left 20px
  padding-right 20px
  margin auto
  max-width content_width

.small-container
  max-width 300px
  padding-left 10px
  padding-right 10px
  margin auto

.title-page
  text-align center
  margin-bottom 30px
  margin-top 30px
  .circle
    background #bdc3c7
    color white
    width 80px
    height 80px
    overflow hidden
    display inline-block
    border-radius 100px

  i
    font-size 30px
    line-height 80px
    color #7f8c8d

  h1
    font-size 12px
    letter-spacing 1px
    text-transform uppercase

/* Site Content Container
-------------------------------------------------- */
body.browser-page
  section#content
    display none

section.site-content
  padding-top header_height + 30px
  top 0
  left nav_proposal_width
  right 0
  bottom 0
  &#content
    z-index 12
    left 0

/* Signin page
-------------------------------------------------- */
.signin-container, .signup-container, .forgot-container
  form
    label
      display:inline-block
    .forgot
      float:right
      a
        font-size 12px


/* Sidebar
-------------------------------------------------- */
aside.nav-proposal
  padding-top header_height
  top 0
  left 0
  bottom 0
  width nav_proposal_width
  overflow-y scroll
  background #f0f0f0
  z-index 10

/* Sidebar dropdown-department
-------------------------------------------------- */
.proposal-type
  position absolute
  left 14px
  top 20px
  background #F1C42E
  color white
  border-radius 100px
  padding 10px
  line-height 10px
  &.proposal-type-2
    background-color #E67E22

/* `component/confirmation` adjust styles
-------------------------------------------------- */
body
  .overlay
    background radial-gradient(ellipse at center, rgba(0,0,0,0.25) 0%, rgba(0,0,0,0.55) 100%)
    z-index 9999998

  .dialog
    position fixed
    display block
    left 50%
    top 150px
    right initial
    bottom initial
    max-width 100%
    width 400px
    margin-left -200px
    background #FFF
    box-shadow 2px 2px 5px rgba(0,0,0,.4)
    border 0px
    overflow initial
    z-index 9999999

    @media (max-width: 399px)
      left 1%
      width 98%
      margin-left 0

    p
      font-size 1.1em
    .content
      padding 0px 20px 10px 20px
      width 100% // overrides .dialog width from dialog component
      max-width none
      min-width 0

      .title
        position absolute
        left 0px
        right 0px
        top 0px
        min-height 20px
        padding 5px 20px
        background #D95E59
        color #FFF
        text-transform uppercase
        font-weight 600
      .body
        padding 20px 0px
        margin-top 30px
      .close
        line-height 10px
        top 10px
        right 10px
        font-weight 600
        color #000
        opacity .5
    .confirmation-actions
      padding 5px 10px
      button
        border none
        color #FFF
        background #aaa
        padding 5px 10px
        letter-spacing 0.09em
        text-transform uppercase
        font-size 0.7em
        outline none
        margin-left 5px
        &.cancel
          outline none
          &:focus, &:hover
            background #777
        &.main, &.ok
          background #D95E59
          &:focus, &:hover
            background #952722

.ellipsis
  overflow hidden
  text-overflow ellipsis
  white-space nowrap

