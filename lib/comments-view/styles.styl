/* Vars
-------------------------------------------------- */
content_width = 580px
/* Comments
-------------------------------------------------- */
.comments
  background #f9f9f9
  padding-top 1px
  padding-bottom 50px

  .my-comments
    .my-comments-list
      li.comment-item
        overflow visible

  .lock-spinner
      background-color #f9f9f9

  .inner-container
    position relative
    margin auto
    max-width content_width
    min-height 5em
    margin-top 40px

    .btn-tendency
      #btn-infavor
        width 30%
        margin-right 5%
        background-color #a4cb53
        -webkit-transition all 0.3s ease
        &:hover
          background-color darken(#a4cb53, 40%)

      #btn-neutral
        width 30%
        margin-right 5%
        background-color #666
        -webkit-transition all 0.3s ease
        &:hover
          background-color darken(#666, 40%)

      #btn-against
        width 30%
        background-color #d95e59
        -webkit-transition all 0.3s ease
        &:hover
          background-color darken(#d95e59, 40%)

    form.comment-form
      overflow hidden

      textarea
        width 100%
        max-width 540px
        padding 2%
      .form-submit
        background-color #333
        color white
      .form-messages
        color red
        display block
      span.error
        color red
        display block

    .new-comment
      background-color #f9f9f9
      border 1px dashed #ddd
      font-weight normal
      color #999
      &:hover
        color #777
        border-color #ccc
      .icon-plus
        margin-right 6px
